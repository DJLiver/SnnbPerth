@page "/experimental"
@using SnnbDB.ModelHub;


<PageTitle>Experimental</PageTitle>
<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="Experimental" TextStyle="TextStyle.H3" TagName="TagName.H1" />
    </RadzenColumn>
</RadzenRow>
<RadzenCard Style="width: 1200px" Variant="Radzen.Variant.Filled">
    <RadzenStack Orientation="Radzen.Orientation.Vertical">
        <RadzenStack Orientation="Radzen.Orientation.Horizontal">
            <RadzenChart Style="height: 308px; width: 554px">
                <RadzenLegend Position="Radzen.Blazor.LegendPosition.Bottom"></RadzenLegend>
                <RadzenSeriesValueLine Value="1350" Stroke="red" StrokeWidth="2"> </RadzenSeriesValueLine>
                <RadzenCategoryAxis Min="1338" Max="1383">
                </RadzenCategoryAxis>
                <RadzenValueAxis Min="-120" Max="0"></RadzenValueAxis>
                <RadzenLineSeries TItem="DataItem" Data="@Spectrum.Charts[0].ChartData" Title="@Spectrum.Charts[0].Title" ValueProperty="Level" CategoryProperty="Freq" Hidden="false" Smooth="false" Stroke="green" StrokeWidth="1">
                    <TooltipTemplate Context="data">
                        <RadzenStack Orientation="Orientation.Vertical">
                            <RadzenStack Orientation="Orientation.Horizontal">
                                <RadzenLabel Text="Frequency:" Style="width: 102px; text-align: right; font-style: normal" />
                                <RadzenLabel Text=@data.Freq.ToString("n2") Style="width: 109px" />
                            </RadzenStack>
                            <RadzenStack Orientation="Orientation.Horizontal">
                                <RadzenLabel Text="Level:" Style="width: 102px; text-align: right" />
                                <RadzenLabel Text=@data.Level.ToString() Style="width: 109px" />
                            </RadzenStack>
                        </RadzenStack>
                    </TooltipTemplate>
                    <ChildContent>
                        <RadzenSeriesAnnotation TItem="DataItem" Text="CF" OffsetY="-16" Data="@Spectrum.Charts[0].ChartData[511]"></RadzenSeriesAnnotation>
                        <RadzenSeriesValueLine Value="1350" Stroke="red" StrokeWidth="1"> </RadzenSeriesValueLine>

                    </ChildContent>
                </RadzenLineSeries>
            </RadzenChart>
            <RadzenChart Style="height: 308px; width: 482px">
                <RadzenLineSeries TItem="DataItem" Data="@Spectrum.Charts[17].ChartData" Title="@Spectrum.Charts[17].Title" ValueProperty="Level" CategoryProperty="Freq" Hidden="false">
                </RadzenLineSeries>
                <RadzenLegend Position="Radzen.Blazor.LegendPosition.Bottom"></RadzenLegend>
            </RadzenChart>
        </RadzenStack>
        <RadzenStack Orientation="Radzen.Orientation.Horizontal">
            <RadzenChart Style="height: 308px; width: 554px">
                <RadzenLineSeries Data="@Spectrum.Charts[1].ChartData" Title="@Spectrum.Charts[1].Title" ValueProperty="Level" CategoryProperty="Freq" Hidden="false">
                </RadzenLineSeries>
                <RadzenLegend Position="Radzen.Blazor.LegendPosition.Bottom"></RadzenLegend>
            </RadzenChart>
            <RadzenChart Style="height: 308px; width: 482px">
                <RadzenLineSeries Data="@Spectrum.Charts[16].ChartData" Title="@Spectrum.Charts[16].Title" ValueProperty="Level" CategoryProperty="Freq" Hidden="false">
                </RadzenLineSeries>
                <RadzenLegend Position="Radzen.Blazor.LegendPosition.Bottom"></RadzenLegend>
            </RadzenChart>
        </RadzenStack>
    </RadzenStack>

</RadzenCard>